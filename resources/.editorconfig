root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{py,pyi}]
indent_size = 4
max_line_length = 120

[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 100

[*.{json,yaml,yml,toml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.sh]
indent_size = 4

[Makefile]
indent_style = tab

[*.{sql,pgsql}]
indent_size = 4
